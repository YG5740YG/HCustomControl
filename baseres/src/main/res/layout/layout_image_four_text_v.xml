<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearH"
    android:background="@color/es_gr3"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="@dimen/half_margin">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageOne"
        android:src="@mipmap/add_gray_bg"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/half_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/relativeOne">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfsdfadfadfadfad"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="@dimen/es_pitch12"
            android:id="@+id/textOne"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfsdfadfadfadfad"
            android:layout_below="@id/textOne"
            android:gravity="center"
            android:textSize="@dimen/es_pitch12"
            android:id="@+id/textTwo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textTwo"
            android:id="@+id/linearOne"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfsdfadfadfadfad"
                android:gravity="center"
                android:textSize="@dimen/es_pitch12"
                android:id="@+id/textThree"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsdfadfadfadfad"
            android:gravity="center"
            android:textSize="@dimen/es_pitch12"
            android:layout_marginLeft="@dimen/half_margin"
            android:id="@+id/textFour"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
