<?xml version="1.0" encoding="utf-8"?>
<!--
使用ptr上啦刷新需要依赖包：
 compile 'in.srain.cube:ultra-ptr:1.0.11'
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pull_refresh_scrollview_home">
        <newhome.baseres.view.MyReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ReboundScroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2000dp"
                android:background="@color/es_bl">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1500dp"
                android:gravity="center"
                android:text="nihao"/>
            </LinearLayout>
        </newhome.baseres.view.MyReboundScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="top|center"
        android:background="@mipmap/ic_toolbar_bg"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/home_head_lyl_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/half_margin"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/top2"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/home_head_txt_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="left"
                    android:textColor="@color/es_w"
                    android:text="定位中.." />
            </LinearLayout>
            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/home_head_lyl_category"
                android:layout_toRightOf="@+id/home_head_lyl_city"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/home_search_theme_1"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ic_home_search"
                android:textColor="@color/es_gr"
                android:textSize="14sp" />
            <LinearLayout
                android:id="@id/home_head_lyl_category"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/half_margin"
                    android:scaleType="center"
                    android:src="@mipmap/top3" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/Relayout_chat"
                    >
                    <ImageView
                        android:id="@+id/iv_chat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/half_margin"
                        android:scaleType="fitXY"
                        android:src="@mipmap/top_chat" />
                    <TextView
                        android:id="@+id/tips_indicator"
                        android:layout_width="@dimen/half_margin"
                        android:layout_height="@dimen/half_margin"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/half_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:background="@drawable/tv_radious_origin"
                        android:visibility="visible"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
