<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bd_bord_gray_ss"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bd_bord_gray_ss"
                android:gravity="center|left"
                android:padding="@dimen/es_font10"
                android:textColor="@color/es_r"
                android:text="取消"
                android:id="@+id/dimiss"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtsubmit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bd_bord_gray_ss"
                android:gravity="center|right"
                android:padding="@dimen/es_font10"
                android:textColor="@color/es_bl"
                android:text="完成"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/half_margin"
                    android:text="卖价"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/es_pitch12" />

                <TextView
                    android:id="@+id/yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/price"
                    android:gravity="center|left"  android:textColor="@color/font_dark"
                    android:paddingTop="@dimen/half_margin"
                    android:text="￥"
                    android:textSize="@dimen/es_pitch12" />

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/yuan"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="0"
                    android:maxLines="1"
                    android:paddingTop="@dimen/half_margin"
                    android:textColorHint="@color/font_gray"
                    android:textSize="@dimen/es_pitch12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/Postage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/half_margin"
                    android:text="邮费"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/es_pitch12" />
                <TextView
                    android:id="@+id/yuan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Postage"
                    android:gravity="center|left"  android:textColor="@color/font_dark"
                    android:paddingTop="@dimen/half_margin"
                    android:text="￥"
                    android:textSize="@dimen/es_pitch12" />
                <EditText
                    android:id="@+id/etpostage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/yuan1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="0"
                    android:maxLines="1"
                    android:padding="@dimen/half_margin"
                    android:textSize="@dimen/es_pitch12" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txttwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txtthree"
                        android:layout_width="0dp"
                        android:textColor="@color/font_dark"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtfour"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txtfive"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:textColor="@color/font_dark"
                        android:text="5"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txtsix"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtseven"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txteight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txtnine"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font_dark"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtdian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bd_bord_gray_sss"
                        android:gravity="center"
                        android:text="."
                        android:textColor="@color/font_dark"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/txtzero"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bd_bord_gray_ss"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/font_dark"
                        android:textSize="26sp" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txtback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bd_bord_gray_sss" />
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/keybordclearwhite"
                            android:id="@+id/text_image"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

