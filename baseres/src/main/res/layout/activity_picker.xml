<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ch999.picker.OptimizeGridView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/grid"
        android:columnWidth="@dimen/topic_view4"
        android:listSelector="@drawable/picker_item_selector"
        android:gravity="center"
        android:horizontalSpacing="@dimen/es_pitch4"
        android:verticalSpacing="@dimen/es_pitch4"
        android:numColumns="auto_fit"
        android:choiceMode="multipleChoiceModal"
        android:scrollbars="vertical"
        android:drawSelectorOnTop="true"
        android:scrollbarStyle="outsideOverlay"
        android:stretchMode="columnWidth"/>
</RelativeLayout>
