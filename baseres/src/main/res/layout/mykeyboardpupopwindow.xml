<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bd_bord_gray_ss">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="卖价"
                    android:padding="@dimen/half_margin"
                    android:textSize="16sp"
                    android:id="@+id/price"
                    />
                <TextView
                    android:layout_toRightOf="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥"
                    android:paddingTop="18dp"
                    android:layout_marginRight="4dp"
                    android:textSize="14sp"
                    android:id="@+id/yuan"
                   />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/yuan"
                    android:background="@null"
                    android:id="@+id/et_price"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColorHint="@color/es_gr"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:visibility="invisible"
                android:background="@drawable/bd_bord_gray_ss">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="原价"
                    android:padding="@dimen/half_margin"
                    android:textSize="16sp"
                    android:id="@+id/price_original"
                    />
                <TextView
                    android:layout_toRightOf="@+id/price_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥"
                    android:layout_marginRight="4dp"
                    android:paddingTop="18dp"
                    android:textSize="14sp"
                    android:id="@+id/yuan1"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/yuan1"
                    android:background="@null"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColorHint="@color/es_gr"
                    android:id="@+id/etprice_original"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="邮费"
                android:padding="@dimen/half_margin"
                android:textSize="16sp"
                android:id="@+id/Postage"
                />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="待议"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/Postage"
                    android:background="@null"
                    android:id="@+id/etpostage"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColorHint="@color/es_gr"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left">
                  <CheckBox
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:text="包邮"
                      android:gravity="center"
                      android:id="@+id/checkbox_postage" />
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="1"
                android:textSize="26sp"
                android:id="@+id/txtone"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="2"
                android:textSize="26sp"
                android:id="@+id/txttwo"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="3"
                android:textSize="26sp"
                android:id="@+id/txtthree"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="4"
                android:textSize="26sp"
                android:id="@+id/txtfour"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="5"
                android:textSize="26sp"
                android:id="@+id/txtfive"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="6"
                android:textSize="26sp"
                android:id="@+id/txtsix"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="7"
                android:textSize="26sp"
                android:id="@+id/txtseven"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="8"
                android:textSize="26sp"
                android:id="@+id/txteight"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="9"
                android:textSize="26sp"
                android:id="@+id/txtnine"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="0"
                android:textSize="26sp"
                android:id="@+id/txtzero"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ss"
                android:text="."
                android:textSize="26sp"
                android:id="@+id/txtdian"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@mipmap/jshandarrow"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bd_bord_gray_ss"
                    android:id="@+id/txtjing"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/jsleftarrow"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/bd_bord_gray_ss"
                    android:textSize="26sp"
                    android:id="@+id/txtback" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="center"
                android:background="@drawable/bd_bord_gray_ssb"
                android:text="确定"
                android:id="@+id/txtsubmit"
                android:textSize="26sp"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>

