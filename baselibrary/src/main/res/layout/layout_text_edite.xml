<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/product_describle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_margin"
            android:background="@drawable/bg_bord_gray_s"
            android:gravity="top"
            android:hint="简单描述一下你的宝贝特征吧......"
            android:lines="4"
            android:maxLength="200"
            android:paddingBottom="25dp"
            android:paddingLeft="@dimen/half_margin"
            android:paddingRight="@dimen/half_margin"
            android:paddingTop="@dimen/half_margin"
            android:scrollbars="vertical"
            android:textColorHint="@color/font_gray"
            android:textSize="@dimen/es_font16" />
        <TextView
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/half_margin"
            android:padding="@dimen/half_margin"
            android:text="还最多可以输入200字" />
    </FrameLayout>
</LinearLayout>
<!--使用方法  Tools.reTextView-->