<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/item_background_strok"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/device_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/query_print_layout_header"
            android:gravity="left"
            android:background="@drawable/item_background"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:textSize="13sp"
                android:text="当前打印机:"/>
            <me.grantland.widget.AutofitTextView
                android:id="@+id/device_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="13sp"
                android:padding="8dp"
                android:textColor="@color/text_red"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/query_print_layout_header"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:background="@drawable/item_background"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:textSize="13sp"
                android:text="打印机状态:"
                />
            <TextView
                android:id="@+id/device_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textSize="13sp"
                android:text="未连接"
                android:textColor="@color/text_red"
                />
            <LinearLayout
                android:id="@+id/blue_tooth_loding_content"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:id="@+id/blue_tooth_loding"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/loding"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bluetooth_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_layout"
            android:orientation="vertical"
            android:layout_marginTop="1dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bluetooth_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_background_half_down"
                android:visibility="gone"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arrow_content"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/triangle"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/mask_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_background"
        android:alpha="0.5"
        android:visibility="gone"
        android:enabled="false">
    </TextView>
</FrameLayout>
