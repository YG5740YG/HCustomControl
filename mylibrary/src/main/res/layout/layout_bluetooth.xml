<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <me.grantland.widget.AutofitTextView
        android:id="@+id/blue_tooth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="1dp"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/item_background_strok"
        android:textSize="15sp"
        android:text="蓝牙"/>

        <TextView
            android:id="@+id/blue_tooth_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/item_background_strok"
            android:textSize="15sp"
            android:text="发送"/>
        <TextView
            android:id="@+id/blue_tooth_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/item_background_strok"
            android:textSize="15sp"
            android:text="接收"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <me.grantland.widget.AutofitTextView
            android:id="@+id/get_blue_tooth_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/item_background_strok"
            android:textSize="15sp"
            android:text="获取已配对蓝牙列表"/>
        <me.grantland.widget.AutofitTextView
            android:id="@+id/search_blue_tooth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/item_background_strok"
            android:textSize="15sp"
            android:text="搜索附近蓝牙列表"/>
    </LinearLayout>
    <me.grantland.widget.AutofitTextView
        android:id="@+id/connection_printer_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="1dp"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/item_background_strok"
        android:textSize="15sp"
        android:text="连接打印机"/>
    <me.grantland.widget.AutofitTextView
        android:id="@+id/start_printer_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="1dp"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/item_background_strok"
        android:textSize="15sp"
        android:text="开始打印"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bluetooth_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>